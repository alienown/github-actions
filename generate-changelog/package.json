{
  "name": "generate-changelog-action",
  "version": "1.2.0",
  "description": "GitHub Action to generate changelog using AI",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && esbuild src/index.ts --bundle --minify --platform=node --target=node24 --format=cjs --outfile=dist/index.js --packages=bundle",
    "format": "prettier --write \"**/*.ts\" --ignore-path ../.prettierignore",
    "lint": "eslint \"**/*.ts\"",
    "test": "vitest run",
    "promptfoo": "promptfoo",
    "promptfoo:test": "promptfoo eval -c tests/promptfoo.yaml"
  },
  "keywords": [
    "github-action",
    "changelog",
    "ai"
  ],
  "author": "alienown",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1",
    "@openrouter/sdk": "0.1.3"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "7.6.1",
    "promptfoo": "0.119.5"
  }
}
